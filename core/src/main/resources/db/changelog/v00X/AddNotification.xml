<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1759864213607-1" author="Danil">
        <createTable tableName="notification">
            <column name="id"
                    type="BIGSERIAL">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_notification"/>
            </column>
            <column name="dayli_money_recalculate_notification"
                    type="DATETIME"/>
            <column name="tg_user_id"
                    type="BIGINT">
                <constraints nullable="true" foreignKeyName="FK_NOTIFICATION_ON_TGUSER" references="tg_user(id)"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>